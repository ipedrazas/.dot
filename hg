[alias]
g = glog --style compact -l 10
cm = commit -m
nopep = !$HG commit -m "$1" --config hooks.pretxncommit.pep8=

[pager]
pager = LESS='FRQX' less
attend = log, diff

[hooks]
pretxncommit.pep8 = python:hghooks.code.pep8hook
pretxncommit.pdb = python:hghooks.code.pdbhook

[pep8]
ignore = E501
